        <TextBlock Grid.Column="3" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="1" Text="?" VerticalAlignment="Center" Width="64" FontSize="36" FontFamily="Comic Sans MS" MouseDown="TextBlock_MouseDown"/>
        <TextBlock x:Name="mainGrid" Grid.Column="3" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="2" Text="?" VerticalAlignment="Center" Width="64" FontSize="36" FontFamily="Comic Sans MS" MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="3" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="3" Text="?" VerticalAlignment="Center" Width="64" FontSize="36" FontFamily="Comic Sans MS" MouseDown="TextBlock_MouseDown"/>
        <TextBox x:Name="timeTextBlock" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" Text="Elasped Time" VerticalAlignment="Center" RenderTransformOrigin="-0.119,0.561" FontSize="32" FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Italic" MouseDown="timeTextBlock_MouseDown_1"/>

